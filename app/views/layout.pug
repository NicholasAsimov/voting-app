doctype
head
  title= title + ' | Voting App'

  link(rel='stylesheet', href='/public/lib/bootstrap/dist/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500')
  link(rel='stylesheet', href='/public/css/main.css')
body
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#my-navbar', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Wanna Vote?
      .collapse.navbar-collapse#my-navbar
        ul.nav.navbar-nav.navbar-right
          -
            var menuShared = [{ title: 'Home', url: '/' }];

            var menuUser = [
              { title: 'New Poll', url: '/newpoll' },
              { title: 'Profile', url: '/profile' },
              { title: 'Logout', url: '/logout' }
            ];

            var menuGuest = [
              { title: 'Login', url: '/login' },
            ];

            var menuCombined;

            if (loggedIn) {
              menuCombined = menuShared.concat(menuUser);
            } else {
              menuCombined = menuShared.concat(menuGuest);
            }

          each item in menuCombined
            li(class=(path == item.url) ? 'active' : '')
              a(href=item.url)= item.title

  .container
    .jumbotron
      block content

  block scripts
    script(src="/public/lib/jquery/dist/jquery.js")
    script(src="/public/lib/bootstrap/dist/js/bootstrap.js")
