extends layout

block append vars
  - pageTitle = 'New Poll'

block append scripts
  script(type='text/javascript', src='/controllers/newPollController.client.js')

block content
  h2 Make a new poll
  form#poll-form
    .form-group
      label(for='poll-title' ) Title
      input(type='text', class='form-control', id='poll-title', required)
    .form-group
      label(for='poll-choices') Choices (seperated by line)
      textarea(id='poll-choices', class='form-control', rows='3', required)
    button(type='submit', class='btn btn-default' id='submit-poll') Submit
